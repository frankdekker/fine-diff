{
    "name": "fdekker/fine-diff",
    "description": "Fine diff library based on Jetbrains' implementation",
    "type": "library",
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "FDekker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FDekker\\Unit\\": "tests/Unit",
            "FDekker\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "digitalrevolution/phpunit-file-coverage-inspection": "^1.6",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/extension-installer": "^1.2"
    },
    "scripts": {
        "check": ["@check:phpstan", "@check:phpmd", "@check:phpcs"],
        "check:phpstan": "@php -dxdebug.mode=off vendor/bin/phpstan analyse",
        "check:phpmd": "@php -derror_reporting=24575 vendor/bin/phpmd src,tests text phpmd.xml.dist --suffixes=php",
        "check:phpcs": "@php vendor/bin/phpcs src tests",
        "fix": "@fix:phpcbf",
        "fix:phpcbf": "@php vendor/bin/phpcbf src tests",
        "test": "phpunit",
        "test:functional": "phpunit --testsuite functional",
        "test:integration": "phpunit --testsuite integration",
        "test:unit": "phpunit --testsuite unit",
        "test:coverage": [
            "phpunit --coverage-clover coverage.xml",
            "phpfci inspect coverage.xml php://stdout --exit-code-on-failure"
        ]
    }
}
